{
  "include": [
    "src/**/*"
   ],
   "exclude": [
    "node_modules"
   ],
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": [
      // "hammerjs"
    ],

    // 出力先などは webpack 側で指定するので本質的には必要なし
    "sourceMap": true,
    "outDir": "./htdocs",
    "sourceRoot": "./src",
  }
}
